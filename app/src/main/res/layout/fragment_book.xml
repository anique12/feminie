<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- TODO: Update blank fragment layout -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:src="@drawable/back_arrow"
                android:layout_weight="0.1"/>

            <TextView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:src="@drawable/back_arrow"
                android:text="Book now"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:paddingLeft="@dimen/dp_10"
                android:layout_weight="0.8"/>

            <ImageView
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:src="@drawable/check"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="0.1"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/toolBar"
        android:layout_weight="0.15"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileBook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alex John"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@android:color/white" />

                <View
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plumber"
                    android:textSize="@dimen/sp_12"
                    android:fontFamily="@font/lato_light"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/lato_light"
                    android:textSize="@dimen/sp_12"
                    android:text="Tab, Wash Basin and sink Problem"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="0.2"
        android:background="@color/colorPrimary">

        <devs.mulham.horizontalcalendar.HorizontalCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            app:textColorSelected="#FFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="0.65"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When?"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/chooseTime"
                android:text="Choose your time"
                android:textSize="@dimen/sp_16"
                android:fontFamily="@font/lato_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where?"
                android:textColor="@color/colorPrimary"/>

            <EditText
                android:id="@+id/choosePlace"
                android:hint="Choose your place"
                android:textSize="@dimen/sp_16"
                android:fontFamily="@font/lato_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="House no?"
                android:fontFamily="@font/lato_light"
                android:textColor="@color/colorPrimary"/>

            <EditText
                android:textSize="@dimen/sp_14"
                android:fontFamily="@font/lato_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Adress?"
                android:fontFamily="@font/lato_light"
                android:textColor="@color/colorPrimary"/>

            <EditText
                android:textSize="@dimen/sp_14"
                android:fontFamily="@font/lato_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Landmark?"
                android:fontFamily="@font/lato_light"
                android:textColor="@color/colorPrimary"/>

            <EditText
                android:textSize="@dimen/sp_14"
                android:fontFamily="@font/lato_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

</LinearLayout>
</LinearLayout>