<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="2"
    android:background="@android:color/white"
    android:layout_marginBottom="@dimen/dp_2"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView_chat"
        android:layout_width="0dp"
        android:src="@drawable/person"
        android:padding="@dimen/dp_10"
        android:layout_height="@dimen/dp_100"
        android:layout_weight="0.5"/>


<LinearLayout
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:weightSum="2"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/name_chat"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Aliza Smith"
            />

        <View
            android:layout_width="0.1dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_2"
            android:layout_height="match_parent"
            android:background="@color/textColor"
            android:fontFamily="@font/lato_light"/>

        <TextView
            android:id="@+id/jobType_chat"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lato_light"
            android:text="Plumber"/>
    </LinearLayout>

    <TextView
        android:id="@+id/latest_message_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/dp_10"
        android:fontFamily="@font/lato_light"
        android:text="Yes, How may i help you?"
        android:layout_weight="1"/>

</LinearLayout>

    <TextView
        android:id="@+id/time_chat"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:text="12:31pm"
        android:padding="@dimen/dp_10"
        android:gravity="end"
        android:fontFamily="@font/lato_light"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.5">

    </TextView>

</LinearLayout>
</layout>